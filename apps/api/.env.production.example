# Backend Environment Variables - PRODUCTION
# COPY THIS FILE to .env.production and UPDATE VALUES

# Server Configuration
PORT=3001
NODE_ENV=production

# Supabase Configuration - REPLACE WITH YOUR PROJECT VALUES
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key
SUPABASE_ANON_KEY=your-production-anon-key

# Database Configuration - REPLACE WITH YOUR DATABASE URL
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.your-project.supabase.co:5432/postgres
DATABASE_POOL_SIZE=20

# JWT Configuration - GENERATE SECURE VALUES
JWT_SECRET=GENERATE-SECURE-32-CHAR-SECRET-HERE
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration - REPLACE WITH YOUR FRONTEND URL
CORS_ORIGIN=https://your-frontend-domain.com
CORS_CREDENTIALS=true

# Security Configuration - GENERATE SECURE VALUES
BCRYPT_ROUNDS=12
SESSION_SECRET=GENERATE-SECURE-SESSION-SECRET
COOKIE_SECRET=GENERATE-SECURE-COOKIE-SECRET

# Logging Configuration - Production Settings
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=50m
LOG_MAX_FILES=10

# Email Configuration - REPLACE WITH YOUR EMAIL SERVICE
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=your-sendgrid-user
SMTP_PASS=your-sendgrid-api-key
FROM_EMAIL=noreply@your-domain.com
FROM_NAME=GMAO System

# Production Monitoring
ENABLE_METRICS=true
ENABLE_SWAGGER=false
ENABLE_PROFILER=false
ENABLE_QUERY_LOG=false

# Rate Limiting - Production Values
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=50