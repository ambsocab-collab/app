{
  "name": "@gmao/api",
  "version": "1.0.0",
  "description": "GMAO Backend API",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
