# Frontend Environment Variables
# Copy this file to .env.local and update with your values

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# API Configuration
VITE_API_BASE_URL=http://localhost:3001
VITE_API_TIMEOUT=30000

# Application Configuration
VITE_APP_NAME=GMAO Maintenance Management System
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Comprehensive maintenance management system

# Feature Flags
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# PWA Configuration
VITE_ENABLE_PWA=true
VITE_PWA_NAME=GMAO App
VITE_PWA_SHORT_NAME=GMAO

# Development Configuration
VITE_ENABLE_DEVTOOLS=true
VITE_LOG_LEVEL=debug

# Maps and Location Services (optional)
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
VITE_ENABLE_GEOLOCATION=true

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.csv,.xlsx,.xls,.pdf,.jpg,.jpeg,.png

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true